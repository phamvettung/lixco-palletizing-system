<Application x:Class="Intech.NarimePalletizingSystem.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Intech.NarimePalletizingSystem.UI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <!-- Label -->
        <Style x:Key="ProductInforLabel" TargetType="Label">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value ="16"/>
            <Setter Property="Margin" Value="5, 5, 5, 5"/>
        </Style>

        <!-- Textbox -->
        <Style x:Key="ProductInforTextbox" TargetType="TextBox">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="5, 5, 5, 5"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>
        
        <!-- Button -->
        <Style x:Key="ProductInforButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0, 0, 0, 0"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>
        
        <!-- RichTextBox -->
        <Style x:Key="ProductInforRichTextBox" TargetType="RichTextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="5, 5, 5, 5"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>
        
        <!-- Ellipse-->
        <Style x:Key="DeviceStatusEllipse" TargetType="Ellipse">
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Fill" Value="LightGray"/>
        </Style>
        
        <!-- Radio button -->
        <Style x:Key="ProductionRadioButton" TargetType="RadioButton">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- CHeck box -->
        <Style x:Key="ProductionCheckbox" TargetType="CheckBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- Combo box-->
        <Style x:Key="ProductionComboBox" TargetType="ComboBox">
            <Setter Property="Width" Value="310"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="DefaultMenuStyle" TargetType="Menu">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="DefaultStatusBarStyle" TargetType="StatusBar">
            <Setter Property="FontSize" Value="15"/>
        </Style>

    </Application.Resources>
</Application>
